{
  "manifest_version": 3,
  "name": "Locked In",
  "version": "1.0.0",
  "minimum_chrome_version": "131",
  "description": "Stay laser-focused on what's important",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "permissions": ["scripting", "activeTab", "tabs", "notifications", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js"],
      "matches": ["*://*/*"]
    }
  ]
}
